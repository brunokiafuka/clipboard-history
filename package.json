{
  "name": "clipboard-history",
  "productName": "Clipboard History",
  "version": "1.0.0",
  "main": "main/index.js",
  "author": "Fausto K. <faustino.kialungila@gmail.com>",
  "scripts": {
    "start": "electron .",
    "build": "next build renderer && next export renderer",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "deploy": "npm run dist && electron-builder build --mac --win --publish always",
    "lint": "eslint renderer/**/*.js main/**/*.js utils/**/*.js",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Fausto95/clipboard-history.git"
  },
  "build": {
    "asar": false,
    "icon": "main/assets/dock-icon.png",
    "appId": "com.electron.clipboard-history",
    "productName": "Clipboard History",
    "copyright": "Copyright Â© year Fausto K. <faustino.kialungila@gmail.com>",
    "extraResources": [
      {
        "from": "renderer/out",
        "to": "app/renderer"
      }
    ],
    "mac": {
      "publish": [
        "github"
      ]
    },
    "win": {
      "publisherName": "Faustino Kialungila",
      "publish": [
        "github"
      ]
    }
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "babel-plugin-styled-components": "^1.10.6",
    "electron": "^6.0.2",
    "electron-builder": "^21.2.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-config-react-app": "^5.0.2",
    "eslint-plugin-flowtype": "^4.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.1.2",
    "next": "latest",
    "prettier": "^1.18.2",
    "react": "^16.8.4",
    "react-dom": "^16.8.4"
  },
  "dependencies": {
    "about-window": "^1.13.1",
    "electron-clipboard-extended": "^1.1.1",
    "electron-is-dev": "^1.0.1",
    "electron-next": "^3.1.5",
    "electron-store": "^5.0.0",
    "electron-updater": "^4.1.2",
    "menubar": "^6.0.8",
    "styled-components": "^4.4.0"
